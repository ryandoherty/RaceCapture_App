#:kivy 1.9.1


<CANBaudRateSettings>:
	label_text: 'CAN Baud Rate'
	help_text: ''

<CANConfigView>:
	spacing: dp(20)
	orientation: 'vertical'
	row_default_height: dp(40)
	id: cansettings
	HSeparator:
		size_hint_y: 0.05
		text: 'CAN bus Configuration'
		halign: 'left'
		
	SettingsView:
		size_hint_y: 0.2
		id: can_enabled
		label_text: 'CAN bus'
		help_text: 'CAN interface for OBDII and custom CAN channels'
		
	HLineSeparator:
		size_hint_y: 0.05
		
	FieldLabel:
		size_hint_y: 0.05
		text: 'Specify the baud rate for the available CAN interfaces'
		
	GridLayout:
		cols: 1
		id: can_bauds
		orientation: 'vertical'
		row_default_height: dp(70)
		row_force_default: True
		spacing: dp(20)
		padding: [dp(20), 0]



		