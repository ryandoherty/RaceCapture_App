<SampleRateSelectorView>:
    BoxLayout:
        padding:[2,2]
        orientation: 'horizontal'
        FieldLabel:
            text: 'Sample Rate'
            halign: 'right'
        SampleRateSpinner:
            rcid: 'sampleRate'
            on_text: root.onSelect(*args)
            values: ['Disabled', '1 Hz', '5 Hz', '10 Hz', '25 Hz', '50 Hz', '100 Hz']
